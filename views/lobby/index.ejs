<%- include('../include/header') %>

<div class="container">
    <%- include('../include/partials/spinner') %>
    
    <%- include('../include/partials/responseMessage') %>

    <div class="lobby hidden" id="lobby" >
        <div class="my-info">
            <h4>My Info</h4>

            <ul>
                <li>
                    <label>Usuario</label>
                    <span id="username">Prueba</span>
                </li>

                <li>
                    <label>Rango</label>
                    <span id="rank">Principiante</span>
                </li>

                <li>
                    <label>Puntos</label>
                    <span id="points">1000</span>
                </li>
            </ul>
        </div>

        <div class="romms">
            <h1>Salas</h1>

            <div class="room">
                <div class="room-info">
                    <span>Rank: <strong>Principiante</strong></span>
                    <span id="beginner-rooms">20 salas</span>
                </div>

                <a href="/games?rank=beginner">Jugar</a>
            </div>

            <div class="room">
                <div class="room-info">
                    <span>Rank: <strong>Intermedio</strong></span>
                    <span id="intermediate-rooms">20 salas</span>
                </div>

                <a href="/games?rank=intermediate">Jugar</a>
            </div>

            <div class="room">
                <div class="room-info">
                    <span>Rank: <strong>Avanzado</strong></span>
                    <span id="advanced-rooms">20 salas</span>
                </div>

                <a href="/games?rank=advanced">Jugar</a>
            </div>

            <div class="room">
                <div class="room-info">
                    <span>Rank: <strong>Experto</strong></span>
                    <span id="expert-rooms">20 salas</span>
                </div>

                <a href="/games?rank=expert">Jugar</a>
            </div>

            <p class="total" id="total-users">Usuarios Totales: 100</p>

            <p class="total" id="total-rooms">Salas Totales: 80</p>
        </div>
    </div>
</div>

<%- include('../include/partials/chat') %>

