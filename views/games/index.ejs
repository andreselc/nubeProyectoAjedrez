<%- include('../include/header') %>

<div class="container">
    <%- include('../include/partials/spinner') %>
    
    <%- include('../include/partials/responseMessage') %>

    <div class="games hidden" id="games">
        <div class="games-top">
            <h1>Juegos</h1>

            <select id="filter">
                <option value="all">All</option>
                <option value="beginner">Principiante</option>
                <option value="intermediate">Intermedio</option>
                <option value="advanced">Avanzado</option>
                <option value="expert">Experto</option>
            </select>
        </div>

        <p class="hidden" id="no-games-message">No se encontraron juegos</p>

        <ul class="games-list hidden" id="games-list"></ul>

        <div class="games-bottom">
            <button id="create-room">Crear Sala</button>

            <button id="join-random">Ingresar a Sala</button>
        </div>
    </div>
</div>

<div class="fixed-element-container form-container hidden" id="create-room-form-container">
    <form id="create-room-form">
        <div class="input-group">
            <label>ID de la Sala</label>
            <input type="text" placeholder="Ingresa el ID de la Sala..." id="room-id" required> 
        </div>

        <div class="input-group">
            <label>Tiempo de Juego</label>
            <select id="game-time">
                <option value="0">Sin tiempo</option>
                <option value="1">15 Minutos</option>
                <option value="2">30 Minutos</option>
                <option value="3">45 Minutos</option>
                <option value="4">60 Minutos</option>
            </select>
        </div>

        <div class="input-group input-group-checkbox">
            <label>Agrega una Contraseña</label>
            <input type="checkbox" id="add-password">
        </div>

        <div class="input-group disabled" id="password-input-group">
            <label>Contraseña</label>
            <input type="password" placeholder="Ingresa la Contraseña..." id="room-password" required>
        </div>

        <button type="submit">Crear</button>

        <span class="close-form" id="close-create-form">
            &#x2715;

        </span>
    </form>
</div>

<div class="fixed-element-container form-container hidden" id="join-room-form-container">
    <form id="join-room-form">
        <div class="input-group">
            <label>Contraseña de la Sala</label>
            <input type="password" placeholder="Ingresa la contraseña..." id="room-password-join" required>
        </div>

        <button type="submit">Ingresar</button>

        <span class="close-form" id="close-join-form">
            &#x2715;
            
        </span>
    </form>
</div>

<%- include('../include/partials/chat') %>

<script src="/socket.io/socket.io.js"></script>
<script src="js/spinner.js"></script>
<script src="js/index.js"></script>
<script src="js/games.js"></script>
<script src="js/responseMessage.js"></script>
<script src="js/chat.js"></script>

<%- include('../include/footer') %>